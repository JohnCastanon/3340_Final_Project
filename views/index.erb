<!-- Main jumbotron for a primary marketing message or call to action -->


<!-- styling for the page -->
<style>
.centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.home{
  padding-left: 420px;
}
.move{
  padding-left: 300px;
}
.cardpads{
  padding-left:20px; 
  padding-bottom:10px;

}

.cardsize{
  padding-left:45px;
  padding-right:45px;


}

</style>
<link rel="stylesheet" type="text/css" href="style.css" />
<!-- jumbotron with a search bar, and can also click on the selling button if the user is pro and sign up -->
<div class="jumbotron mt-3 mx-3 pt-5"  style="background-image: url('/images/website/marketplace.jpg'); background-size:100%";>
          
  <div class="container">
    <h1 class="display-1 text-white"><strong>Pulga Online! </strong></h1>
      <p class="text-white"><strong>RENT, BUY, and SELL.</strong></p>
                <div id= "item" class="pb-5">
              <form  action="/query" method="GET" class="form-inline">
                <input class="form-control mr-sm-2" name="searchValue" type="search" placeholder="What Item?" aria-label="Search">
                 <input class="form-control mr-sm-2" name="zipcode" type="search" placeholder="What's your zipcode?" aria-label="Search">
              <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
              <div class="move">
                 <button class="btn btn-primary  px-3 py-3" type="submit">Start Selling Now</button>
              </div>
              </form>
        </div>
       

  </div>
</div>

<!-- Shows the current market place if the user is sign up, they can search the items through the search bar. Else a sign in form is display in the page -->
</br>
<% if current_user%>
  <h2 class="text-center pb-5"><strong>Current Market Place</strong></h2>    
  <div class="container">
    <div class="row py-2">
        <% @Item.each do |i| %>
        <div class="cardpads">
          <div class="card cardsize ">
            <div class="text-center pt-4">
                <img class="card-img-top" src=<%= i.imgData%> style=" width:120px; height:150px" alt="Card image cap">
            </div>
              <div class="card-body text-center">
                <h5 class="card-title"><%=i.item %> </h5>
                <p class="card-text">Price:$<em><%=i.price %></em></p>
                  <% if current_user%>
                 <a href=<%="ad/"+ (i.id).to_s %> name="id" class=" btn btn-primary">Contact Seller</a>
                <% else %>
                <button type="button" class="btn btn-secondary " data-toggle="tooltip" data-placement="left" title="Login to view">
                Contact Seller
              </button>
                <% end %>
              </div>
          </div>
        </div>
        <% end %>
      </div>
  </div>
<% else %>
  
    <div class="container">
    <h2 class="text-center"><strong> Welcome</strong></h2> 
    <h5 class="text-center">Log in or <a href="/sign_up"> Sign up </a>to view items</h5>
    <br>
    <form action="/process_login" method="POST" class="home">
      <div class="">
          <div class="row">
          <div class="form-group col-sm-5">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" name="email"  placeholder="Enter email">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-sm-5">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>
        </div>
          <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>
<%end%>




    <hr>
</div> <!-- /container